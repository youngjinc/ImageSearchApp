<resources>
    <!-- Base application theme. -->
    <style name="Theme.ImgSurfer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ImgSurfer.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.ImgSurfer</item>
    </style>

    <style name="Style.RoundedImageView.8" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <style name="Style.RecyclerView.GridLayout.Content" parent="">
        <item name="android:layout_marginTop">@dimen/spacing_base</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">80dp</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
    </style>

    <style name="Style.TextView.Title" parent="">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.H1</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="spanCount">2</item>
    </style>
</resources>